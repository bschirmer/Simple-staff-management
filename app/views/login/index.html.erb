<h1>Adnat</h1>
<h2>Log in</h2>
<%= form_with scope: :user, url: login_index_path, local: true do |form| %>
  
    <p>
      <%= form.label :email %><br>
      <%= form.email_field :email %>
    </p>
   
    <p>
      <%= form.label :password %><br>
      <%= form.password_field :password %>
    </p>
   
    <p>
      <%= form.submit "Login" %>
    </p>
  <% end %>
  <%= link_to 'Sign up', new_user_path %> <br>
  <%= link_to 'Forgot your password?', forgot_url %>